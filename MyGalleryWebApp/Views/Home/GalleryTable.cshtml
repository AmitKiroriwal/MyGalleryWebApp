@using MyGalleryWebApp.Models;
@model List<MyGalleryWebApp.Models.Gallery>;
<title>Gallery Details</title>
<body>
    <table class="table table-hover table-light">
        <tr>
            <th>
                ID
            </th>
            
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Photo Path</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryId</td>
                <td>@item.Categoryname</td>
                <td>
                <img src="~/Images/@item.PhotoPath" height="70px" width="90px"/>
                </td>
                <td role="group">
                    <a asp-action="UpdateGal" asp-controller="Home" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="DeleteGal" asp-controller="Home" asp-route-id="@item.Id"><i class="bi bi-archive-fill"></i></a>
                </td>
            </tr>
        }

    </table>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">View All Categories</a>
</body>

